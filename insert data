INSERT INTO expense_details (detail_code, expense_id, expense_type_id, amount, quantity)
SELECT 'DTL', em.expense_id, el.expense_type_id, 1000, 2
FROM expense_master em, expense_list el
WHERE el.type_name='Fuel'
AND ROWNUM <= 10;



----------------------------------------



-- Department heads (no manager)
UPDATE employees
SET manager_id = NULL
WHERE last_name IN ('Ahmed','Khan','Ali','Hossain');

UPDATE employees e
SET manager_id = (
    SELECT m.employee_id
    FROM employees m
    WHERE m.last_name = 'Ahmed'
)
WHERE e.department_id = (
    SELECT department_id
    FROM departments
    WHERE department_name = 'Workshop'
)
AND e.last_name <> 'Ahmed';

UPDATE employees e
SET manager_id = (
    SELECT m.employee_id
    FROM employees m
    WHERE m.last_name = 'Hossain'
)
WHERE e.department_id = (
    SELECT department_id
    FROM departments
    WHERE department_name = 'Accounts'
)
AND e.last_name <> 'Hossain';



SELECT
    e.employee_id,
    e.first_name,
    e.last_name,
    m.first_name AS manager_first_name,
    m.last_name  AS manager_last_name
FROM employees e
LEFT JOIN employees m
ON e.manager_id = m.employee_id
ORDER BY e.last_name;
